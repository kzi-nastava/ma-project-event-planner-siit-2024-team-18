<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:paddingHorizontal="10dp"
        android:paddingVertical="24dp">

        <LinearLayout
            android:id="@+id/edit_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow"
                app:tint="@color/lightText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/merriweather_bold"
                android:gravity="center"
                android:text="@string/edit_profile"
                android:textColor="@color/lightText"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_email"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/email"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_design"
                android:inputType="none"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/darkText"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_id_card"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/first_name"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_text_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_design"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/darkText" />

            <TextView
                android:id="@+id/text_first_name_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_id_card"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/last_name"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_text_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_design"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/darkText" />

            <TextView
                android:id="@+id/text_last_name_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_company"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/company_name"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_text_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_design"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/darkText"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_company_name_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/profile_photo"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image_view_profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_photo_placeholder"
                    android:contentDescription="@string/profile_photo"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/bin"
                    android:visibility="gone"/>
            </FrameLayout>

            <Button
                android:id="@+id/button_select_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/secondary"
                android:text="@string/select_photo"
                android:fontFamily="@font/raleway"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_address"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/address"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_design"
                android:inputType="textPostalAddress"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/darkText" />

            <TextView
                android:id="@+id/text_address_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_phone_call"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/phone_number"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_text_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_design"
                android:inputType="phone"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/darkText" />

            <TextView
                android:id="@+id/text_phone_number_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_edit_info"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/description"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_design"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textSize="18sp"
                android:gravity="top"
                android:minLines="3"
                android:maxLines="6"
                android:scrollbars="vertical"
                android:textColor="@color/darkText"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_description_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_category"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/categories"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_select_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/darkText"
                android:text="@string/select_categories"
                android:backgroundTint="@color/lightText"
                android:fontFamily="@font/raleway"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_categories_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_event_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_event"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/event_types"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_select_event_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/darkText"
                android:text="@string/select_event_types"
                android:backgroundTint="@color/lightText"
                android:fontFamily="@font/raleway"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_event_types_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/old_password"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle">

                <EditText
                    android:id="@+id/edit_text_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_design"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:textColor="@color/darkText" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/text_old_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/new_password"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle">

                <EditText
                    android:id="@+id/edit_text_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_design"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:textColor="@color/darkText" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/text_new_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/lightText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="@string/confirm_new_password"
                    android:textColor="@color/lightText"
                    android:textSize="20sp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle">

                <EditText
                    android:id="@+id/edit_text_confirm_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_design"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:textColor="@color/darkText" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/text_confirm_new_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/alert"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_edit"
                android:layout_width="156dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/secondary"
                android:fontFamily="@font/raleway"
                android:padding="12dp"
                android:text="@string/edit"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </LinearLayout>

    </FrameLayout>
</ScrollView>