<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/requests_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/commentsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comment_requests"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/noCommentsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/there_are_no_pending_comments_currently"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/loadingCommentsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading_pending_comments"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

</LinearLayout>
