<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_event_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:background="@drawable/edit_text_design"
        android:inputType="text"
        android:hint="@string/event_type_name"
        android:padding="12dp"
        android:textSize="20sp"
        android:textColor="@color/darkText" />

    <TextView
        android:id="@+id/text_event_type_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:textColor="@color/alert"
        android:textSize="18sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_design"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textSize="18sp"
        android:gravity="top"
        android:minLines="3"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:hint="Description"
        android:textColor="@color/darkText" />

    <TextView
        android:id="@+id/text_description_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:textColor="@color/alert"
        android:textSize="18sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_select_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:textSize="20sp"
        android:textColor="@color/darkText"
        android:hint="Select Categories"
        android:backgroundTint="@color/lightText"
        android:fontFamily="@font/raleway" />

    <TextView
        android:id="@+id/text_categories_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:textColor="@color/alert"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginTop="8dp" />

</LinearLayout>
