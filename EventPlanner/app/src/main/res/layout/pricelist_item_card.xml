<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/pricelistItemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pricelistItemId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="Id"
                android:textColor="@color/darkText"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pricelistItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="Pricelist Item Name"
                android:textColor="@color/darkText"
                android:textStyle="bold"
                android:textSize="20sp" />

            <FrameLayout
                android:id="@+id/editButtonLayout"
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/half_transparent_circle" />

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/edit"
                    app:tint="@android:color/white" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/originalPriceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:text="Original Price: "
                android:textColor="@color/darkText"/>

            <TextView
                android:id="@+id/originalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:text="1000$"
                android:textColor="@color/darkText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:text="Discount: "
                android:textColor="@color/darkText"/>

            <TextView
                android:id="@+id/discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:text="50%"
                android:textColor="@color/darkText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:text="Price: "
                android:textColor="@color/darkText"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:text="500$"
                android:textColor="@color/darkText"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
