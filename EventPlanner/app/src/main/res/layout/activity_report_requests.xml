<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/reports_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/reportsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_requests"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reportsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/noReportsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/there_are_no_pending_reports_currently"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/loadingReportsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading_pending_reports"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

</LinearLayout>
